{
  "framework": "vite",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "outputDirectory": "dist",
  "functions": {
    "app/api/**/*.js": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    { "source": "/api/spin-results", "destination": "https://ilaraapi.onrender.com/spin-results" },
    { "source": "/api/users", "destination": "https://ilaraapi.onrender.com/users" },
    { "source": "/api/admin/:path*", "destination": "https://ilaraapi.onrender.com/admin/:path*" },
    { "source": "/api/:path*", "destination": "https://ilaraapi.onrender.com/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
